<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.jess.zapchallenge.home.view.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_detailsFragment"
            app:destination="@id/detailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/propertiesFragment"
        android:name="com.jess.zapchallenge.home.view.PropertiesFragment"
        android:label="PropertiesFragment" />

    <fragment
        android:id="@+id/detailsFragment"
        android:name="com.jess.zapchallenge.home.view.DetailsFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <action
            android:id="@+id/action_detailsFragment_to_propertiesFragment"
            app:destination="@id/propertiesFragment" />
    </fragment>

</navigation>